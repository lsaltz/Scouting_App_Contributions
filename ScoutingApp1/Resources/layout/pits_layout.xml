<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team Number"
            android:id="@+id/textViewPS4"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Numbers Only"
            android:id="@+id/editTextPS1"
            android:inputType="number"
            android:maxLength="4"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Robot Weight"
            android:id="@+id/textViewPS1"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IN POUNDS"
            android:id="@+id/editTextPS35"
            android:inputType="number"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Drivetrain"
            android:id="@+id/textViewPS2"/>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/radioGroupPS1">

            <RadioButton
                android:id="@+id/radioPS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanum" />

            <RadioButton
                android:id="@+id/radioPS2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tank" />

            <RadioButton
                android:id="@+id/radioPS3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holonomic" />

            <RadioButton
                android:id="@+id/radioPS4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Swerve" />

            <RadioButton
                android:id="@+id/radioPS5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Slide" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:id="@+id/textViewPS3"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextPS2"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/buttonPS1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Home"
            android:id="@+id/buttonPS2"/>

        <ListView
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:dividerHeight="5px"
            android:id="@+id/listViewP"
            android:scrollbarStyle="outsideOverlay"/> 
            android:scrollbarStyle="outsideOverlay"/> 
        


</LinearLayout>
</ScrollView>