
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Number Selected"
        android:textAlignment="center"
        android:textSize="100px"
        android:id="@+id/textViewtd1"/>
   
           <TextView
            android:text="Weight"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_Weight"
            android:gravity="center"/>

        <TextView
            android:text="Drivetrain"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_Drive"
            android:gravity="center"/>
        
        <TextView
            android:text="Dimensions"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_DimensionsL" 
            android:gravity="center"/>

        <TextView
            android:text="Auto"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_Auto"
            android:gravity="center"/>
            
        <TextView
            android:text="Build"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_Build"
            android:gravity="center"/>
           
        <TextView
            android:text="Electronics"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_Electronics"
            android:gravity="center"/>
      
    <TextView
            android:text="Chassis"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Chassis"
            android:gravity="center"/>
       
    <TextView
            android:text="Spinner"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_Spinner"
            android:gravity="center"/>
      
    <TextView
            android:text="Cameras"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_Cameras"
            android:gravity="center"/>
    
    <TextView
            android:text="Climb"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_Climb"
            android:gravity="center"/>
     
    <TextView
            android:text="Notes"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtView_Notes"
            android:gravity="center"/>
    <GridView  
            android:minWidth="25px"  
            android:minHeight="25px"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:id="@+id/gridViewtd1"  
            android:columnWidth="500px"  
            android:numColumns="auto_fit"  
            android:verticalSpacing="10dp"  
            android:horizontalSpacing="10dp"   
            android:stretchMode="columnWidth"  
            android:gravity="center"/>
</LinearLayout>